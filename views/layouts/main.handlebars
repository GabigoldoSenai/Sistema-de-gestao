<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="css/{{style}}">
    <title>{{title}}</title>
</head>

<body>
        <nav>
            {{#if showNavbar}}
            {{>_navbar navbarClass='custom-navbar'}}
            {{/if}}
        </nav>
        <main>
            <header>
                {{#if showHeader}}
                    {{>_header headerClass='custom-header'}}
                {{/if}}
            </header>
            <div class="container">
                {{{body}}}
            </div>
        </main>
</body>
<script src="https://kit.fontawesome.com/4f5c786c9e.js" crossorigin="anonymous"></script>
<script src="js/{{script}}"></script>
<script src="../js/custom-navbar.js"></script>
<script src="../js/custom-header.js"></script>
<script src="../js/main.js"></script>


</html>